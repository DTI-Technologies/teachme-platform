{
  "name": "teachme-monorepo",
  "version": "1.0.0",
  "description": "AI-Powered Educational Platform for K-12 Learning",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:ai\"",
    "dev:web": "cd packages/web && npm run dev",
    "dev:mobile": "cd packages/mobile && npm run start",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:ai": "cd packages/ai-services && npm run dev",
    "dev:admin": "cd packages/admin-dashboard && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:web && npm run build:admin",
    "build:shared": "cd packages/shared && npm run build",
    "build:web": "cd packages/web && npm run build",
    "build:mobile": "cd packages/mobile && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:admin": "cd packages/admin-dashboard && npm run build",
    "test": "npm run test:shared && npm run test:backend && npm run test:web",
    "test:shared": "cd packages/shared && npm run test",
    "test:web": "cd packages/web && npm run test",
    "test:mobile": "cd packages/mobile && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:admin": "cd packages/admin-dashboard && npm run test",
    "lint": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx,.js,.jsx --fix",
    "clean": "rimraf packages/*/dist packages/*/build packages/*/.next",
    "setup": "npm install && npm run setup:env && npm run setup:firebase",
    "setup:env": "node scripts/setup-env.js",
    "setup:firebase": "firebase init",
    "deploy": "npm run build && npm run deploy:backend && npm run deploy:web",
    "deploy:backend": "cd packages/backend && npm run deploy",
    "deploy:web": "cd packages/web && npm run deploy",
    "deploy:mobile": "cd packages/mobile && npm run deploy"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/teachme.git"
  },
  "keywords": [
    "education",
    "ai",
    "k12",
    "learning",
    "teaching",
    "edtech",
    "react",
    "react-native",
    "nodejs",
    "openai"
  ],
  "author": "DTI Technologies",
  "license": "MIT"
}
