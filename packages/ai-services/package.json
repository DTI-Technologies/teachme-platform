{
  "name": "@teachme/ai-services",
  "version": "1.0.0",
  "description": "AI/ML services for TeachMe platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@teachme/shared": "file:../shared",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "openai": "^4.0.0",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "natural": "^6.5.0",
    "compromise": "^14.10.0",
    "sentiment": "^5.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.2",
    "@types/jest": "^29.5.3",
    "@types/natural": "^5.1.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "rimraf": "^5.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
